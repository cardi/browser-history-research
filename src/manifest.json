{
  "manifest_version" : 2,
  "name"             : "browser history research",
  "version"          : "1.0.1",
  "description"      : "Reads browser history, anonymizes domain components (example.com to yyyy.com), and compiles anonymized data for manual submission",

  "background": {
    "scripts": ["lib/browser-polyfill.js", "experiment.js", "background.js"]
  },

  "browser_action": {
    "default_icon": {
      "24": "img/icon-24.png",
      "32": "img/icon-32.png",
      "64": "img/icon-64.png"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "browserhistoryresearch@ant.isi.edu",
      "update_url": "https://raw.githubusercontent.com/cardi/browser-history-research/master/dist/firefox/updates.json"
    }
  },

  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png"
  },

  "permissions": [
    "alarms",
    "history",
    "notifications"
  ]
}
